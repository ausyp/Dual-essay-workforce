	author = {Degenhardt, L. and Whiteford, H.A. and Ferrari, A.J. and Baxter, A.J. and Charlson, F.J. and Hall, W.D. and Freedman, G. and Burstein, R. and Johns, N. and Engell, R.E. and Flaxman, A. and Murray, C.J.L. and Vos, T.},
