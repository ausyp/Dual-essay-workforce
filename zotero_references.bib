	volume = {7},
	issn = {1745-6916},
	shorttitle = {Dehumanization in {Medicine}},
	url = {https://doi.org/10.1177/1745691611429706},
	doi = {10.1177/1745691611429706},
	abstract = {Dehumanization is endemic in medical practice. This article discusses the psychology of dehumanization resulting from inherent features of medical settings, the doctor–patient relationship, and the deployment of routine clinical practices. First, we identify six major causes of dehumanization in medical settings (deindividuating practices, impaired patient agency, dissimilarity, mechanization, empathy reduction, and moral disengagement). Next, we propose six fixes for these problems (individuation, agency reorientation, promoting similarity, personification and humanizing procedures, empathic balance and physician selection, and moral engagement). Finally, we discuss when dehumanization in medical practice is potentially functional and when it is not. Appreciating the multiple psychological causes of dehumanization in hospitals allows for a deeper understanding of how to diminish detrimental instances of dehumanization in the medical environment.},
	language = {en},
	number = {2},
	urldate = {2019-10-17},
	journal = {Perspectives on Psychological Science},
	author = {Haque, Omar Sultan and Waytz, Adam},
	month = mar,
	year = {2012},
	pages = {176--186}
}

@article{lammers_power_2011,
	title = {Power increases dehumanization},
	volume = {14},
	issn = {1368-4302},
	url = {https://doi.org/10.1177/1368430210370042},
	doi = {10.1177/1368430210370042},
	abstract = {The current paper shows that the experience or possession of power increases dehumanization—the process of denying essential elements of “humanness” in other people and perceiving them as objects or animals. A position of power entails making difficult decisions for other people that may cause pain and suffering. Dehumanization helps to downplay this pain and suffering and thus to justify these decisions. Study 1 shows that powerful people dehumanize an outgroup more. Study 2 replicates that powerful people dehumanize an outgroup more and shows that this is especially likely after making a tough decision that is painful for that outgroup. Study 3 replicates this in a medical context. Together, these studies show that dehumanization—although by itself a very negative phenomenon—can also have functional elements: it helps powerful people to make tough decisions in a more distant, cold, and rational manner.},
	language = {en},
	number = {1},
	urldate = {2019-10-17},
	journal = {Group Processes \& Intergroup Relations},
	author = {Lammers, Joris and Stapel, Diederik A.},
	month = jan,
	year = {2011},
	pages = {113--126}
}

