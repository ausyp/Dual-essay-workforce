	number = {12},
	urldate = {2019-10-17},
	journal = {Journal of Applied Social Psychology},
	author = {Trifiletti, Elena and Bernardo, Gian Antonio Di and Falvo, Rossella and Capozza, Dora},
	year = {2014},
	pages = {768--777}
}

@article{haslam_recent_2016,
