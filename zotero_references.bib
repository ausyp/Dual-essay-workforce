	urldate = {2019-10-15},
	journal = {Archives of Physical Medicine and Rehabilitation},
	author = {Bandholm, Thomas and Kehlet, Henrik},
	month = jul,
	year = {2012},
	keywords = {Arthritis, Arthroplasty, Leg, Muscle strength, Outcomes assessment, Rehabilitation},
	pages = {1292--1294}
}

